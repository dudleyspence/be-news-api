{
  "GET /api": {
    "description": "Serves up a JSON representation of all available endpoints of the API."
  },
  "GET /api/topics": {
    "description": "Serves an array of all topics.",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "Serves an array of all articles.",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "Serves the article that has the given article_id.",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "www.url.com",
        "comment_count": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Serves the comments associated with a given article_id, sorted with the earliest first.",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "body": "I hate streaming noses",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-11-03T20:00:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Adds a comment associated with a given article_id.",
    "queries": [],
    "exampleRequestBody": {
      "username": "icellusedkars",
      "body": "This is a comment."
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "body": "This is a comment.",
        "article_id": 1,
        "author": "icellusedkars",
        "votes": 0,
        "created_at": "2020-11-03T20:00:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Updates the votes of an article by the given article_id.",
    "queries": [],
    "exampleRequestBody": {
      "inc_votes": 1
    },
    "exampleResponse": {
      "votes": 1
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a comment by the given comment_id.",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "Returns all users.",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "weegembump",
          "name": "Gemma Bump",
          "avatar_url": "www.url.com/avatar.jpg"
        }
      ]
    }
  }
}

