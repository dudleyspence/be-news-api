{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },

  "GET /api/articles/article_id": {
    "description": "serves the article that has the given article_id",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "article": 
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author_id": 2,
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "www.url.com"
        }
    }
  },

  "GET /api/articles/:article_id/comments": {
    "description": "serves the comments ascociated with a given article_id sorted so with the earliest first",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "comments": 
        [{
          "comment_id": 5,
          "body": "I hate streaming noses",
          "article_id": 1,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-11-03T20:00:00.000Z"
        }]
    }
  }
}
